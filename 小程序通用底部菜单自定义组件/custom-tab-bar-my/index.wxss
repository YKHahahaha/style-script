.fix_btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 100rpx;
  /* box-shadow: 0rpx 8rpx 48rpx 0rpx rgba(0, 0, 0, 0.33); */
  /* border-style:solid; */
  border-top:solid #D5D5D5 1rpx;
  background-color: white;
}

.fix_btn .tab {
  width: 150rpx;
  float: left;
  height: 100rpx;
  position: relative;
  text-align: center;
}

.fix_btn .tab .wordSelect {
  color: #333;
}

.fix_btn .tab .word {
  color: #999;
  font-size: 22rpx;
  line-height: 24rpx;
  height: 24rpx;
}

.fix_btn .tab .icon {
  width: 45rpx;
  height: 45rpx;
  margin-top: 16rpx;
  position: relative;
  left: 52rpx;
}

.fix_btn .tab .icon_center {
  width: 110rpx;
  height: 75rpx;
  position: relative;
  top: 1rpx;
  left: 20rpx;
}

.wordSelect {
  color: #ff8000 !important;
}

